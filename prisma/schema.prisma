generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}


model users {
  id          Int      @id @default(autoincrement())
  username    String   @unique @db.VarChar(250)
  email       String   @unique @db.VarChar(250)
  password    String   @db.VarChar(250)
  role        String   @db.VarChar(250)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Menu {
  id        Int      @id @default(autoincrement())
  name      String
  price     String    // Adjust type based on your database schema
  description String @db.VarChar(3000)
  image     String   // Adjust type based on your database schema
  rating    String     // Optional if rating is nullable
  createdAt DateTime @default(now())
}
